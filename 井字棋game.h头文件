#define _crt_secure_no_warnings 1
#include"game.h"
#include<stdio.h>
void initboard(char board[row][col], int row, int col)
{
	int i = 0;
	int j = 0;
	for (i = 0; i < row; i++)
	{
		for (j = 0; j < col; j++)
		{
			board[i][j] = '  ';
		}
	}
}
void displayboard(char board[row][col], int row, int col)
{
	int i = 0;
	for (i = 0; i < row; i++)
	{
		int j = 0;
		for (j = 0; j < col; j++)
		{
			printf(" %c ", board[i][j]);
			if (j < col - 1)
			printf("|");
		}
		printf("\n");
		if (i < row - 1)
		{
			int j = 0;
			
				for (j = 0; j < col; j++)
				{
					printf("---");
					if (j < col - 1)
						printf("|");

				}
				printf("\n");
			
		}
	}
}
void playerturn(char board[row][col], int row, int col)
{
	int x = 0;
	int y = 0;
	printf("玩家走棋\n");
	
	while (1)
	{
		scanf("%d %d", &x, &y);
		if (x >= 1 && x <= row && y >= 1 && y <= col)
		{
			if (board[x - 1][y - 1] == ' ')
			{
				board[x - 1][y - 1] = '*';
				break;
			}
			else
			{
				printf("坐标被占用\n");
			}

		}
		else
		{
			printf("输入错误请重输！\n");
		}

	}

	
}
void computerturn(char board[row][col], int row, int col)
{
	
	printf("电脑走棋\n");
	while (1)
	{
		int x = rand() % row;
		int y = rand() % col;
		if (board[x][y] == ' ')
		{
			board[x][y] = '#';
			break;
		}

	}

}
int isfull(char board[row][col], int row, int col)
{
	int i = 0;
	int j = 0;
	for (i = 0; i < row; i++)
	{
		for (j = 0; j < col; j++)
		{
			if (board[i][j] == ' ')
			{
				return 0;
			}
		}
	}
	return 1;
}
char iswin(char board[row][col], int row, int col)
{
	int i = 0;
	for (i = 0; i < row; i++)
	{
		if (board[i][0] == board[i][1] && board[i][1] == board[i][2] && board[i][1] != ' ')
			return board[i][1];
	}
	for (i = 0; i < col; i++)
	{
		if (board[0][i] == board[1][i] && board[1][i] == board[2][i] && board[1][i] != ' ')
			return board[1][i];
	}
	if (board[0][0] == board[1][1] && board[1][1] == board[2][2] && board[1][1] != ' ')
	{
		return board[1][1];
	}
	if (board[0][2] == board[1][1] && board[1][1] == board[2][0] && board[1][1] != ' ')
	{
		return board[1][1];
	}
	int ret=isfull(board,row,col);
	if (ret == 1)
	{
		return 'q';
	}
	return 'c';
}
#include"game.h"
void initboard(char board[row][col], int row, int col)
{
	int i = 0;
	int j = 0;
	for (i = 0; i < row; i++)
	{
		for (j = 0; j < col; j++)
		{
			board[i][j] = '  ';
		}
	}
}
void printboard(char board[row][col], int row, int col)//   |   |   
                                                       //---|---|---
	                                                   //   |   |   
													   //---|---|---
	                                                   //   |   |   
													   
{
	int i = 0;
	for (i = 0; i < row; i++)//这个for循环是总的，一行一行开始
	{
		int j = 0;
		for (j = 0; j < col; j++)//这个for循环是打印棋子所在格子
		{
			printf(" %c ",board[i][j]);
			if (j < col - 1)//最后一列是没有分割线的
			{
				printf("|");
			}
			
		}
		printf("\n");//每一行结束要换行,这个要放在列循环for外面，否则每循环一次列都换一次行。
		//这个换行目的是i（row)每增加1就换一次行
		if (i < row - 1)//最后一行底下没有---
		{
			for (j = 0; j < col; j++)//这个for循环是打印下划线的
			{

				printf("---");
				if (j < col-1)
				{
					printf("|");
				}
				
			}
			printf("\n");//同样需要换行
		}
	}
}
void playerturn(char board[row][col], int row, int col)
{
	int x = 0;
	int y = 0;
	printf("玩家走棋:\n");
	while (1)//输入不对就一直循环输入，输入正确就跳出
	{
		scanf("%d %d", &x, &y);//scanf要放在while里面
		if (x >= 1 && x <= row && y >= 1 && y <= col)//玩家并不知道行与列是从零开始，所以x>=1
			//而且输入位置不能被占用即其位置为空
		{
			if (board[x - 1][y - 1] == ' ')
			{
				board[x - 1][y - 1] = '*';//注意位置坐标是x-1和y-1
				break;
			}
			else
			{
				printf("坐标被占用\n");
			}
		}
		else
		{
			printf("输入非法请重输！\n");
		}
		
		
	}
}
void computerturn(char board[row][col], int row, int col)
{
	printf("电脑走棋:\n");
	while (1)//电脑的while不能少
	{
		int x = rand() % row;//整除之后必定为行或列之内的数，就不需要判断是否符合
		int y = rand() % col;//电脑产生随机数
		if (board[x][y] == ' ')//判断位置是否被占用
		{
			
			board[x][y] = '#';
			break;
		}
	}
}
int isfull(char board[row][col], int row, int col)
{
	int i = 0;
	for (i = 0; i < row; i++)
	{
		int j = 0;
		for (j = 0; j < col; j++)
		{
			if (board[i][j] == ' ')
			{
				return 0;
			}
		}
	}
	return 1;
}
char iswin(char board[row][col], int row, int col)
{
	int i = 0;
	for (i = 0; i < row; i++)
	{
		if (board[i][0] == board[i][1] && board[i][1] == board[i][2] && board[i][1] != ' ')
			return board[i][1];
	}
	int j = 0;
	for (j = 0; j < col; j++)
	{
		if (board[0][j] == board[1][j] && board[1][j] == board[2][j] && board[1][j] != ' ')
			return board[1][j];
	}
	if (board[0][0] == board[1][1] && board[1][1] == board[2][2]&&board[1][1]!=' ')
	{
		return board[1][1];
	}
	if (board[0][2] == board[1][1] && board[1][1] == board[2][0] && board[1][1] != ' ')
	{
		return board[1][1];
	}
	int a=isfull(board, row, col);//以上都不满足，还剩平局和游戏继续两种情况
	if (a == 1)
	{
		return 'q';
	}
	else
	{
		return 'c';
	}
	
}
